---
layout: default
---

<div class="col-lg-8 offset-lg-2 post-list">
  {% for post in site.posts %}
    <div class="post-detail">
      <a href="{{ post.url | relative_url }}">
        <h3 class="row post-title">{{ post.title }}</h3>
        {% comment %} <p class="row post-subtitle">{{ post.subtitle }}</p> {% endcomment %}
        <p class="row post-meta">Posted on {{ post.date | date: "%b %-d, %Y" }}</p>
      </a>
      <hr class="row">
    </div>
  {% endfor %}
</div>
